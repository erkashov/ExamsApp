<Window x:Class="ExamsApp.Windows.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamsApp.Windows"
        mc:Ignorable="d"
        Title="StudentWindow" Height="309.53" Width="474.309">
    <StackPanel Margin="30">
        <TextBlock Text="экзаменов нет" Visibility="Collapsed" x:Name="tbNot"></TextBlock>
        <ListBox x:Name="lbExams" DisplayMemberPath="Name" SelectionChanged="lbExams_SelectionChanged"></ListBox>
        <Button x:Name="buttonReport" Content="Посмотреть результаты" Click="buttonReport_Click"></Button>
    </StackPanel>
</Window>
