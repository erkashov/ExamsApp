<Window x:Class="ExamsApp.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamsApp.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800" Activated="Window_Activated">
    <StackPanel>
        <ListBox x:Name="lbExams" ItemsSource="{Binding Name}" SelectionChanged="lbExams_SelectionChanged"></ListBox>
        <Button x:Name="createExam" Content="Создать экзамен" Click="createExam_Click"></Button>
    </StackPanel>
</Window>
