<Window x:Class="ExamsApp.CreateExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamsApp"
        mc:Ignorable="d"
        Title="CreateExam" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Название"></TextBlock>
        <TextBox x:Name="tbNAme" ></TextBox>
        <ListBox x:Name="lbQues" ItemsSource="{Binding Wording}"></ListBox>
        <Button x:Name="addQues" Content="Добавить вопрос" Click="addQues_Click"></Button>
        <Button x:Name="start" Content="Начать экзамен" Click="start_Click"></Button>
        
        
    </StackPanel>
</Window>
